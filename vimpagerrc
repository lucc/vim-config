" ~/.vimpagerrc file by luc
" vim: ft=vim

nmap <silent> S :call luc#man#open_this_in_gvim()<CR>

set ignorecase
set smartcase
set laststatus=1
call luc#setup#viminfo('pager')

if !empty($VIMPAGER_NO_PASSTHROUGH)
  let vimpager_passthrough = 0
endif

if !has('gui_running')
  set t_Co=256
endif
set rtp+=~/.local/share/nvim/plugins/vim-colors-solarized
set bg=dark
colorscheme solarized
