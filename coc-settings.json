{
  "diagnostic.enable": true,
  "codeLens.enable": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "filetypes": ["haskell", "lhaskell"]
    },
    "html": {
      "command": "html-languageserver",
      "filetypes": ["html"]
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "python": {
      "command": "pyls",
      "filetypes": ["python"]
    },
    "scala": {
      "command": "metals-vim",
      "filetypes": ["scala"]
    },
    "tex": {
      "command":"texlab",
      "filetypes": ["tex"]
    }
  }
}
